%div.ui.two.column.centered.stackable.grid
  %div.nine.wide.column
    %h1 New pin
    %h1
      .pinform.ui.segment
        = form_tag pininfo_path, method: "post", class: "ui reply form" do
          = text_field_tag :pin_url, @pin.pin_url, placeholder:"http://"
          %label
            Category
          =  collection_select(:category, :category_id, Category.all, :id, :name)
          %div.ui.two.column.grid
            %div.column
              %label
                Board
              = collection_select(:board, :board_id, Board.where(user_id: current_user.id), :id, :name)
            %div.column
              %br
              = link_to "Or Add New Board", new_board_path, class:"ui green button"
          %div.ui.divider
          = submit_tag "Go", class: 'ui mini blue button'
          #cancelpinurl.ui.mini.red.button
            Cancel
    - if @pin.remote_image_url == nil
      #pinurlbutton.ui.red.basic.button
        Pin Url
      #owndiv.ui.horizontal.divider
        Or Create your own
    #newform
      %br
      = render 'form', pin: @pin
