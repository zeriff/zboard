%div.ui.two.column.centered.stackable.grid
  %div.nine.wide.column
    %h1 New pin
    %h1
      .pinform
        = form_tag pininfo_path, method: "post", class: "ui reply form" do
          %label
            Pin Url
            = text_field_tag :pin_url,@pin.pin_url, placeholder:"http://"
          = submit_tag "Go", class: 'ui mini blue button'
          #cancelpinurl.ui.mini.red.button
            Cancel
    - if @pin.remote_image_url == nil
      #pinurlbutton.ui.red.basic.button
        Pin Url
      #owndiv.ui.horizontal.divider
        Or Create your own
    #newform
      %br
      = render 'form', pin: @pin
