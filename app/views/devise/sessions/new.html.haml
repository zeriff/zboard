#session
  %div.ui.two.column.center.aligned.stackable.grid
    %div.six.wide.column
      = image_tag "/logo.png", class: "ui centered tiny image"
      -# %button.ui.large.circular.vine.button
      -#   %font{face: "arial,helvetica"}
      -#     ZERIFF
      %h2
        Log in
      %div.ui.segment
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          %label
          = f.input :email, required: false, autofocus: true, label: false, placeholder: "Email"
          = f.input :password, required: false, label: false, placeholder: "Password"
          -# = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          = f.button :submit, "Log in"
      = render "devise/shared/links"
